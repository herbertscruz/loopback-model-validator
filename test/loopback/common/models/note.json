{
  "name": "Note",
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "validators": {
        "max": 10,
        "pattern": {
          "exp": "^(Title - ).*",
          "flags": "i"
        }
      }
    },
    "content": {
      "type": "string",
      "validators": {
        "min": 3,
        "max": 300
      }
    },
    "gender": {
      "type": "string",
      "validators": {
        "inclusionOf": {
          "in": ["male", "female"]
        }
      }
    },
    "email": {
      "type": "string",
      "filters": {
        "lower": true
      }
    },
    "abbreviation": {
      "type": "string",
      "validators": {
        "length": 3
      },
      "filters": {
        "upper": true
      }
    },
    "code": {
      "type": "string",
      "filters": {
        "replace": {
          "pattern": {
            "type": "regex",
            "exp": "[^\\d]",
            "flags": "g"
          }
        }
      }
    }
  },
  "mixins": {
    "Validators" : true,
    "Filters" : true
  }
}
